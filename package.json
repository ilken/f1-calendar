{
  "name": "f1-calendar",
  "description": "A modern Formula 1 race calendar for the 2025 season with timezone support.",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "yarn next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "yarn prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "yarn prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "yarn jest --config jest.config.js --coverage --passWithNoTests",
    "test:watch": "yarn jest --watch",
    "test:coverage": "yarn jest --coverage"
  },
  "dependencies": {
    "@mantine/core": "^7.16.3",
    "@mantine/hooks": "^7.16.3",
    "date-fns": "^4.1.0",
    "date-fns-tz": "^3.2.0",
    "jotai": "^2.12.0",
    "next": "15.1.7",
    "prettier": "^3.5.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "identity-obj-proxy": "^3.0.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.ts"],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": ["babel-jest", { "presets": ["next/babel"] }]
    }
  }
}
